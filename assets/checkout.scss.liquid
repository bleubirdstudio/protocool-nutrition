.header{
  background: black;
  padding: 0 !important;
}
.shop__name{
  text-indent: -999px;
  width: 1056px;
  height: 305px;
  display: inline-block;
  background: url("https://cdn.shopify.com/s/files/1/0677/1369/files/logo_light.png?14465") 50% 50px no-repeat fixed;
  background-size: 63%;
}
.payment-due__price{
  color: #800000 !important;
}
input[type="submit"]{
  display: block;
  width: 100%;
  background: transparent !important;
  border: 1px solid #800000;
  font-family: 'Oswald', sans-serif;
  text-transform: uppercase;
  color: #800000 !important;
  float: right;
  margin-top: 20px;
  text-shadow: none !important;
  &:hover{
    background: #800000 !important;
    color: white !important;
  }
}
::selection{
  background: #800000 !important;
}
