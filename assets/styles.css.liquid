body, html{ height: 100%; display: inline-block; width: 100%;}

.toolbar{
  background: url('../assets/carbon_fibre_big.png');
  background-size: 10px;
  border-bottom: 1px solid rgba(255,255,255,.1);
}
.toolbar ul{
  display: inline-block;
}
.toolbar ul li{
  display: inline-block;
}

nav{
  background: rgb(38,38,38); /* Old browsers */
  background: -moz-linear-gradient(top,  rgba(38,38,38,1) 0%, rgba(25,25,25,1) 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(38,38,38,1)), color-stop(100%,rgba(25,25,25,1))); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  rgba(38,38,38,1) 0%,rgba(25,25,25,1) 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top,  rgba(38,38,38,1) 0%,rgba(25,25,25,1) 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top,  rgba(38,38,38,1) 0%,rgba(25,25,25,1) 100%); /* IE10+ */
  background: linear-gradient(to bottom,  rgba(38,38,38,1) 0%,rgba(25,25,25,1) 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#262626', endColorstr='#191919',GradientType=0 ); /* IE6-9 */

  &.muscle{
    border-top: 1px solid rgba(255,255,255,.1);
    box-shadow: 0px 0px 25px 5px rgba(0, 0, 0, 0.9);
    height: 110px;
    position: relative;
    z-index: 2;
  }
  img{
    width: 80%;
  }
  ul{
    margin-bottom: 0;
    li{
      display: inline-block;
      font-family: Impact, Charcoal, sans-serif;
      text-transform: uppercase;
      vertical-align: middle;
      position: relative;
      border-right: 1px solid rgba(255, 255, 255, 0.15);
      border-left: 2px solid black;
      margin: 0 -1.75px;
      /*&:first-of-type{
        border-left: none;
      }
      &:last-of-type{
        border-right: none;
      }*/
      &:nth-of-type(2){
        a:after{
          content: "\e114";
          font-family: 'Glyphicons Halflings';
          font-size: 12px;
          margin-left: 10px;
        }
      }
      a{
        color: rgba(255,255,255,.5);
        font-size: 20px;
        padding: 42px 30px 38px 30px;
        display: block;
        position: relative;
        letter-spacing: 1px;
        -webkit-transition: .15s;
        -moz-transition: .15s;
        -ms-transition: .15s;
        -o-transition: .15s;
        &:hover{
          color: white;
          text-decoration: none; 
          background: -moz-linear-gradient(top,  rgba(0,0,0,.5) 0%, rgba(0,0,0,0) 70%, rgba(0,0,0,0) 71%); /* FF3.6+ */
          background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,.5)), color-stop(70%,rgba(0,0,0,0)), color-stop(71%,rgba(0,0,0,0))); /* Chrome,Safari4+ */
          background: -webkit-linear-gradient(top,  rgba(0,0,0,.5) 0%,rgba(0,0,0,0) 70%,rgba(0,0,0,0) 71%); /* Chrome10+,Safari5.1+ */
          background: -o-linear-gradient(top,  rgba(0,0,0,.5) 0%,rgba(0,0,0,0) 70%,rgba(0,0,0,0) 71%); /* Opera 11.10+ */
          background: -ms-linear-gradient(top,  rgba(0,0,0,.5) 0%,rgba(0,0,0,0) 70%,rgba(0,0,0,0) 71%); /* IE10+ */
          background: linear-gradient(to bottom,  rgba(0,0,0,.5) 0%,rgba(0,0,0,0) 70%,rgba(0,0,0,0) 71%); /* W3C */
          filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#000000', endColorstr='#00000000',GradientType=0 ); /* IE6-9 */;
        }
      }
    }
  }
  h1{
    margin-bottom: 20px;
  }
  .logo{
    display: inline-block;
  }
  .main{
    display: inline-block;
    float: right;
  }
}

.banner { position: relative; overflow: auto; height: auto !important;
  width: 100% !important;
  ul{
    padding: 0;
    margin: 0;
    li { list-style: none; 
      float: left; 
      height: 500px;
      .arms{
        width: 100%;
        height: inherit;
      }
      &:first-of-type {
        .arms{
          background: url('../assets/arms.jpg') 50% -170px no-repeat fixed;
          background-size: 100%;
        }
      }
      &:nth-of-type(2) {
        .arms{
          background: url('../assets/fp_image_1.jpg') 50% -170px no-repeat fixed;
          background-size: 100%;
        }
      }
      &:nth-of-type(3) {
        .arms{
          background: url('../assets/fp_image_2.jpg') 50% -170px no-repeat fixed;
          background-size: 100%;
        }
      }
    }
  }
  .dots{
    position: absolute;
    z-index: 10;
    bottom: 0;
    padding: 0;
    width: 100%;
    text-align: center;
    li{
      width: 10px;
      height: 10px;
      display: inline-block;
      border-radius: 50%;
      background: white;
      margin: 0 10px;
      color: transparent;
      cursor: pointer;
      -webkit-transition: .25s;
      &:after{
        content: '';
        width: 10px;
        text-indent: 0px;
        height: 10px;
        display: inline-block;
        border-radius: 50%;
        position: absolute;
        margin-left: -9.35px;
        margin-top: .45px;
        border: 1px solid white;
        -webkit-transform: scale(0);
        -webkit-transition: .25s;
      }
      &:hover{
        &:after{
          -webkit-transform: scale(2);
        }
      }
      &.active{
        -webkit-transform: scale(2);
        &:after{
          -webkit-transform: scale(0);
        }
      }
    }
  }
}